<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/adminHead') %>
    <title>Deposits</title>
</head>

<style>
    /* Custom class to invert the image color */
    .hover-invert:hover img {
        filter: invert(1);
    }
    .header {
        background-color: #4A5568;
        color: white;
    }

    .table-header {
        background-color: #EDF2F7;
    }
</style>

<body class="bg-gray-100 font-sans leading-normal tracking-normal" x-data="{ sidebarOpen: false }" @click.away="sidebarOpen = false">

    <div class="flex flex-col xl:flex-row min-h-screen">
        <%- include('../partials/adminHeader') %>

        <!-- Main Content -->
        <main class="flex-grow bg-gray-100 min-h-screen p-6 ml-64">
            <!-- Deposits Page Content -->
            <div class="xl:container mx-auto pt-4">
                <div class="header px-6 py-4">
                    <h1 class="text-3xl font-semibold">Deposits</h1>
                </div>
                
                <!-- Table -->
                <table class="min-w-full bg-white">
                    <thead class="table-header">
                        <tr>
                            <th class="px-2 sm:px-4 md:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
                            <th class="px-2 sm:px-4 md:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>                           
                            <th class="px-2 sm:px-4 md:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                            <th class="px-2 sm:px-4 md:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        <!-- Sample Deposit Data -->
                        <tr>
                            <td class="px-2 sm:px-4 md:px-6 py-4 whitespace-wrap">Alice John</td>                           
                            <td class="px-2 sm:px-4 md:px-6 py-4 whitespace-wrap">$300.00</td>                           
                            <td class="px-2 sm:px-4 md:px-6 py-4 whitespace-wrap">Completed</td>
                            <td class="px-2 sm:px-4 md:px-6 py-4 whitespace-wrap">2024-06-05</td>
                        </tr>
                        <tr>
                            <td class="px-2 sm:px-4 md:px-6 py-4 whitespace-wrap">Bob Brown</td>                           
                            <td class="px-2 sm:px-4 md:px-6 py-4 whitespace-wrap">$150.00</td>                           
                            <td class="px-2 sm:px-4 md:px-6 py-4 whitespace-wrap">Pending</td>
                            <td class="px-2 sm:px-4 md:px-6 py-4 whitespace-wrap">2024-06-07</td>
                        </tr>
                        <!-- Add more rows as needed -->
                    </tbody>
                </table>
            </div>

        </main>
    </div>
</body>

</html>