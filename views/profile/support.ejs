<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/profileHead') %>
    <title>Support</title>
</head>

<style>
    /* Custom class to invert the image color */
    .hover-invert:hover img {
        filter: invert(1);
    }
</style>

<body class="bg-gray-100 font-sans leading-normal tracking-normal" x-data="{ sidebarOpen: false }" @click.away="sidebarOpen = false">

    <div class="flex flex-col xl:flex-row min-h-screen">
        <!-- Nav -->
        <%- include('../partials/profileHeader') %>

        <!-- Main Content -->
        <main class="flex-grow bg-gray-100 min-h-screen p-6 xl:ml-64">
            <!-- Top Bar -->
            <div class="hidden xl:flex justify-between items-center bg-white p-4 rounded shadow ">
                <div class="font-bold text-xl">Dashboard</div>
                <div x-data="{ open: false }" class="relative">
                    <button @click="open = !open" class="focus:outline-none rounded-full border-2 bg-gray-900">
                        <p class="text-2xl text-white uppercase p-2"><%= user.fName.slice(0,1)  %> <%= user.lName.slice(0,1) %></p>
                    </button>
                    <div x-show="open" x-cloak @click.away="open = false" class="absolute right-0 mt-2 w-48 bg-white rounded-md overflow-hidden shadow-xl z-20">
                        <a href="profile" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-200">Profile Settings</a>
                        <a href="change-password" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-200">Change Password</a>
                        <a href="/logout" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-200">Logout</a>
                    </div>
                </div>
            </div>

            <!-- Dashboard Content -->
            <!-- <div class="mt-8 max-page-width bg-white p-4 rounded shadow">
                <h2 class="text-2xl font-bold mb-4">Welcome to Your Dashboard</h2>
                <p class="text-gray-700">Here you can view your investment stats, manage deposits and withdrawals, and more.</p>
                
            </div> -->
            <div class="xl:container mx-auto pt-4">
                    <h1 class="text-3xl font-medium mb-6">Open Ticket</h1>
                    <div class="bg-white p-6 rounded-lg shadow-lg">
                        <form action="#" method="post" class="space-y-5">
                            <div class="flex flex-col md:flex-row gap-5 w-full">
                                <div class="w-full">
                                    <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">Subject</label>
                                    <input type="text" id="subject" name="subject" class="mt-1 p-2 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-opacity-50">
                                </div>
                                <div class="w-full">
                                    <label for="priority" class="block text-sm font-medium text-gray-700 mb-2">Priority</label>
                                    <select id="priority" name="priority" class="mt-1 p-2 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-opacity-50">
                                        <option value="low">Low</option>
                                        <option value="medium">Medium</option>
                                        <option value="high">High</option>
                                    </select>
                                </div>
                            </div>
                            
                            <div>
                                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Message</label>
                                <textarea id="message" name="message" rows="5" class="mt-1 p-2 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-opacity-50"></textarea>
                            </div>
                            <div>
                                <label for="attachments" class="block text-sm font-medium text-gray-700 mb-2">Attachments <span class="text-red-500 font-normal text-xs">Max 5 files can be uploaded. Maximum upload size is 256MB.</span></label>
                                <input type="file" id="attachments" name="attachments" class="mt-1 p-2 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-opacity-50" multiple>
                                <p class="text-sm text-gray-500 mt-2">Allowed File Extensions: .jpg, .jpeg, .png, .pdf, .doc, .docx</p>
                            </div>
                            <button type="submit" class="w-full bg-blue-800 text-white py-2 px-4 rounded-md hover:bg-blue-900 transition duration-200 font-semibold">Submit</button>
                        </form>
                    </div>
            </div>
        </main>
    </div>

</body>

</html>