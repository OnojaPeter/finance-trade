<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/profileHead') %>
    <title>Dashboard</title>
</head>

<style>
    /* Custom class to invert the image color */
    .hover-invert:hover img {
        filter: invert(1);
    }
</style>

<body class="bg-gray-100 font-sans leading-normal tracking-normal" x-data="{ sidebarOpen: false }" @click.away="sidebarOpen = false">

    <div class="flex flex-col xl:flex-row min-h-screen">
        <!-- Nav -->
        <%- include('../partials/profileHeader') %>

        <!-- Main Content -->
        <main class="flex-grow bg-gray-100 min-h-screen p-6 xl:ml-64">
            <!-- Top Bar -->
            <div class="hidden xl:flex justify-between items-center bg-white p-4 rounded shadow ">
                <div class="font-bold text-xl">Dashboard</div>
                <div x-data="{ open: false }" class="relative">
                    <button @click="open = !open" class="focus:outline-none rounded-full border-2 bg-gray-900">
                        <p class="text-2xl text-white uppercase p-2"><%= user.fName.slice(0,1)  %> <%= user.lName.slice(0,1) %></p>
                        <!-- <img class="h-10 w-10 rounded-full" src="https://via.placeholder.com/150" alt="Profile"> -->
                    </button>
                    <div x-show="open" x-cloak @click.away="open = false" class="absolute right-0 mt-2 w-48 bg-white rounded-md overflow-hidden shadow-xl z-20">
                        <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-200">Profile Settings</a>
                        <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-200">Change Password</a>
                        <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-200">Logout</a>
                    </div>
                </div>
            </div>

            <!-- Dashboard Content -->
            <!-- <div class="mt-8 max-page-width bg-white p-4 rounded shadow">
                <h2 class="text-2xl font-bold mb-4">Welcome to Your Dashboard</h2>
                <p class="text-gray-700">Here you can view your investment stats, manage deposits and withdrawals, and more.</p>
                
            </div> -->
            <div class="xl:container mx-auto pt-4">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        
                    <!-- Card 1 -->
                    <div class="bg-white p-6 rounded-lg shadow-md">
                        <h2 class="text-xl font-bold mb-4">Successful Deposits</h2>
                        <p class="text-2xl font-bold text-green-500">0.00 USD</p>
                        <div class="mt-4">
                            <table class="w-full">
                                <thead>
                                    <tr>
                                        <th class="text-left p-2">Submitted</th>
                                        <th class="text-left p-2">Pending</th>
                                        <th class="text-left p-2">Rejected</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="p-2">0.00</td>
                                        <td class="p-2">0.00</td>
                                        <td class="p-2">0.00</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <hr class="my-4 ">
                        <p class="italic text-sm">You've requested to deposit $0.00. Where $0.00 is just initiated but not submitted.</p>
                    </div>
        
                    <!-- Card 2 -->
                    <div class="bg-white p-6 rounded-lg shadow-md">
                        <h2 class="text-xl font-bold mb-4">Successful Withdrawals</h2>
                        <p class="text-2xl font-bold text-green-500">0.00 USD</p>
                        <div class="mt-4">
                            <table class="w-full">
                                <thead>
                                    <tr>
                                        <th class="text-left p-2">Submitted</th>
                                        <th class="text-left p-2">Pending</th>
                                        <th class="text-left p-2">Rejected</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="p-2">0.00</td>
                                        <td class="p-2">0.00</td>
                                        <td class="p-2">0.00</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <hr class="my-4 ">
                        <p class="italic text-sm">You've requested to withdraw $0.00. Where $0.00 is just initiated but not submitted.</p>
                    </div>
        
                    <!-- Card 3 -->
                    <div class="bg-white p-6 rounded-lg shadow-md">
                        <h2 class="text-xl font-bold mb-4">Total Investments</h2>
                        <p class="text-2xl font-bold text-blue-500">0.00 USD</p>
                        <div class="mt-4">
                            <table class="w-full">
                                <thead>
                                    <tr>
                                        <th class="text-left p-2">Submitted</th>
                                        <th class="text-left p-2">Pending</th>
                                        <th class="text-left p-2">Rejected</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="p-2">0.00</td>
                                        <td class="p-2">0.00</td>
                                        <td class="p-2">0.00</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <hr class="my-4">
                        <p class="italic text-sm">You've invested $0.00 from the deposit wallet and $0.00 from the interest wallet</p>
                    </div>
        
                </div>
            </div>
        </main>
    </div>

</body>

</html>