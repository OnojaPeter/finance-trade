<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/profileHead') %>
    <title>Transactions</title>
</head>

<style>
    /* Custom class to invert the image color */
    .hover-invert:hover img {
        filter: invert(1);
    }
</style>

<body class="bg-gray-100 font-sans leading-normal tracking-normal" x-data="{ sidebarOpen: false }" @click.away="sidebarOpen = false">

    <div class="flex flex-col xl:flex-row min-h-screen">
        <!-- Nav -->
        <%- include('../partials/profileHeader') %>

        <!-- Main Content -->
        <main class="flex-grow bg-gray-100 min-h-screen p-6 xl:ml-64">
            <!-- Top Bar -->
            <div class="hidden xl:flex justify-between items-center bg-white p-4 rounded shadow ">
                <div class="font-bold text-xl">Dashboard</div>
                <div x-data="{ open: false }" class="relative">
                    <button @click="open = !open" class="focus:outline-none">
                        <img class="h-10 w-10 rounded-full" src="https://via.placeholder.com/150" alt="Profile">
                    </button>
                    <div x-show="open" x-cloak @click.away="open = false" class="absolute right-0 mt-2 w-48 bg-white rounded-md overflow-hidden shadow-xl z-20">
                        <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-200">Profile Settings</a>
                        <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-200">Change Password</a>
                        <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-200">Logout</a>
                    </div>
                </div>
            </div>

            <!-- Dashboard Content -->
            <!-- <div class="mt-8 max-page-width bg-white p-4 rounded shadow">
                <h2 class="text-2xl font-bold mb-4">Welcome to Your Dashboard</h2>
                <p class="text-gray-700">Here you can view your investment stats, manage deposits and withdrawals, and more.</p>
                
            </div> -->
            <div class="xl:container mx-auto pt-4">
                <div class="container mx-auto">
                    <h2 class="text-sm text-gray-500 mb-3">Transaction</h2>
                    <div class="">
                        <h3 class="text-3xl font-medium mb-4">My Transactions History</h3>
                        <hr class="my-3 border-gray-300">

                        <div class="bg-white p-6 rounded-lg shadow-lg mb-6">
                            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                                <!-- Transaction Number Input -->
                                <div class="relative flex flex-col">
                                    <label for="transaction-number" class="absolute top-0 left-0 px-2 py-1 bg-white text-gray-500 text-sm ">Transaction Number</label>
                                    <input type="text" id="transaction-number" class="px-3 py-4 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 mt-3" placeholder="Enter transaction number">
                                </div>
                        
                                <!-- Wallet Dropdown -->
                                <div class="relative flex flex-col">
                                    <label for="wallet" class="absolute top-0 left-0 px-2 py-1 bg-white text-gray-500 text-sm">Wallet</label>
                                    <select id="wallet" class="px-3 py-4 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 mt-3">
                                        <option value="">Select Wallet</option>
                                        <option value="deposit">Deposit Wallet</option>
                                        <option value="withdrawal">Withdrawal Wallet</option>
                                        <!-- Add more options as needed -->
                                    </select>
                                </div>
                        
                                <!-- Type Dropdown -->
                                <div class="relative flex flex-col">
                                    <label for="type" class="absolute top-0 left-0 px-2 py-1 bg-white text-gray-500 text-sm">Type</label>
                                    <select id="type" class="px-3 py-4 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 mt-3">
                                        <option value="">Select Type</option>
                                        <option value="deposit">Deposit</option>
                                        <option value="withdrawal">Withdrawal</option>
                                        <option value="bonus">Bonus</option>
                                        <!-- Add more options as needed -->
                                    </select>
                                </div>
                        
                                <!-- Remark Dropdown -->
                                <div class="relative flex flex-col">
                                    <label for="remark" class="absolute top-0 left-0 px-2 py-1 bg-white text-gray-500 text-sm">Remark</label>
                                    <select id="remark" class="px-3 py-4 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 mt-3">
                                        <option value="">Select Remark</option>
                                        <option value="completed">Completed</option>
                                        <option value="pending">Pending</option>
                                        <option value="failed">Failed</option>
                                        <!-- Add more options as needed -->
                                    </select>
                                </div>
                            </div>
                        </div>
                        
                        <div class="flex flex-col space-y-4 bg-white p-4 rounded-lg shadow-lg">
                            <div class="flex flex-row justify-between">
                                <div class="flex gap-4 items-center">
                                    <div class="w-8 h-8 sm:w-10 sm:h-10 flex items-center justify-center bg-green-100 rounded-full">
                                        <i class="fas fa-check text-green-400 text-xl sm:text-2xl"></i>
                                    </div>
                        
                                    <!-- ICON FOR FAILED TRANSACTION -->
                                    <!-- <div class="w-8 h-8 sm:w-10 sm:h-10 flex items-center justify-center bg-red-100 rounded-full">
                                        <i class="fas fa-times text-red-400 text-xl sm:text-2xl"></i>
                                    </div> -->
                        
                                    <div>
                                        <p class="text-gray-600 text-sm sm:text-base">Transaction Number: <span class="font-bold">#6ABYGFRWNA2AV</span></p>
                                        <p class="text-gray-600 text-sm sm:text-base">Wallet: <span class="font-bold">Deposit wallet</span></p>
                                        <p class="text-gray-600 text-sm sm:text-base">Type: <span class="font-bold">Registration bonus</span></p>
                                        <p class="text-gray-600 text-xs sm:text-sm mt-2">Jun 22 2024 @9:09pm</p>
                                    </div>
                                </div>
                                <div class="mt-0 md:mt-0">
                                    <p class="text-gray-600 text-sm sm:text-base">Amount: <span class="font-bold">5.00 USD</span></p>
                                    <!-- <p class="text-gray-600 text-sm sm:text-base">Balance: <span class="font-bold">5.00 USD</span></p> -->
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </main>
    </div>

</body>

</html>