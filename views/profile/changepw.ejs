<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/profileHead') %>
    <title>Change Password</title>
</head>

<style>
    /* Custom class to invert the image color */
    .hover-invert:hover img {
        filter: invert(1);
    }
</style>

<body class="bg-gray-100 font-sans leading-normal tracking-normal" x-data="{ sidebarOpen: false }" @click.away="sidebarOpen = false">

    <div class="flex flex-col xl:flex-row min-h-screen">
        <!-- Nav -->
        <%- include('../partials/profileHeader') %>

        <!-- Main Content -->
        <main class="flex-grow bg-gray-100 min-h-screen p-6 xl:ml-64">
            <!-- Top Bar -->
            <div class="hidden xl:flex justify-between items-center bg-white p-4 rounded shadow ">
                <div class="font-bold text-xl">Dashboard</div>
                <div x-data="{ open: false }" class="relative">
                    <button @click="open = !open" class="focus:outline-none">
                        <img class="h-10 w-10 rounded-full" src="https://via.placeholder.com/150" alt="Profile">
                    </button>
                    <div x-show="open" x-cloak @click.away="open = false" class="absolute right-0 mt-2 w-48 bg-white rounded-md overflow-hidden shadow-xl z-20">
                        <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-200">Profile Settings</a>
                        <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-200">Change Password</a>
                        <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-200">Logout</a>
                    </div>
                </div>
            </div>

            <!-- Dashboard Content -->
            <!-- <div class="mt-8 max-page-width bg-white p-4 rounded shadow">
                <h2 class="text-2xl font-bold mb-4">Welcome to Your Dashboard</h2>
                <p class="text-gray-700">Here you can view your investment stats, manage deposits and withdrawals, and more.</p>
                
            </div> -->
            <div class="xl:container mx-auto pt-4">
                <h1 class="text-3xl font-medium mb-6">Change Password</h1>
                <div class="bg-white p-6 rounded-lg shadow-lg">
                    <form action="#" method="post" class="space-y-4">
                        <!-- <div class="flex flex-col md:flex-row gap-5"> -->
                            <div class="w-full">
                                <label for="password" class="block text-sm font-medium text-gray-700 mb-2">Current Password</label>
                                <input type="password" id="password" name="password" class="mt-1 p-2 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-opacity-50" placeholder="Enter your current password">
                            </div>
                            <div class="w-full">
                                <label for="newPassword" class="block text-sm font-medium text-gray-700 mb-2">New Password</label>
                                <input type="password" id="newPassword" name="newPassword" class="mt-1 p-2 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-opacity-50" placeholder="Enter your new password">
                            </div>
                            <div class="w-full">
                                <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-2">Confirm New Password</label>
                                <input type="password" id="confirmPassword" name="confirmPassword" class="mt-1 p-2 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-opacity-50" placeholder="Confirm new password">
                            </div>
                        <!-- </div> -->

                        <button type="submit" class="w-full bg-blue-800 text-white py-2 px-4 rounded-md hover:bg-blue-900 transition duration-200 font-semibold">Submit</button>
                    </form>
                </div>
            </div>
        </main>
    </div>

</body>

</html>